generator client {
  provider = "prisma-client-js"
  output   = "./__generated__"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  email    String @unique @db.Citext
  password String

  name   String
  avatar String?

  role UserRole @default(REGULAR)

  isVerified         Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  method AuthMethod

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  accounts     Account[]
  skillProfile SkillProfile?
  Route        Route[]

  @@map("users")
}

model SkillProfile {
  id String @id @default(uuid())

  headline String?

  profilename String? @unique @map("profile_name")

  githubUrl   String? @map("github_url")
  vkUrl       String? @map("vk_url")
  telegramUrl String? @map("telegram_url")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @map("user_id")

  @@map("skill_profile")
}

model Account {
  id String @id @default(uuid())

  accountId String @map("unique_id")

  type     String
  provider String

  refreshToken String?  @map("refresh_token")
  accessToken  String?  @map("access_token")
  expiresAt    DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  @@unique([accountId, provider])
  @@map("accounts")
}

model Token {
  id String @id @default(uuid())

  email     String
  token     String
  type      TokenType
  expiresIn DateTime  @map("expires_in")

  oauthToken String? @unique @map("oauth_token")

  @@unique([token, type])
  @@map("tokens")
}

enum UserRole {
  REGULAR
  ADMIN
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
  GITHUB
  YANDEX
}

enum TokenType {
  VERIFICATION
  TWO_FACTOR
  PASSWORD_RESET
  CHANGE_EMAIL
}

model Route {
  id          String      @id @default(uuid())
  title       String
  description String?
  privateType PrivateType @default(PRIVATE) @map("private_type")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  topicNodes TopicNode[]

  tags RouteTag[]
}

model Tag {
  id   String @id @default(uuid())
  name String @unique

  routes RouteTag[]
}

model RouteTag {
  id String @id @default(uuid())

  route   Route  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId String @map("route_id")

  tag   Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId String @map("tag_id")

  @@unique([routeId, tagId])
}


enum PrivateType {
  GENERAL
  PRIVATE
}

model TopicNode {
  id      String  @id @default(uuid())
  title   String
  content String?

  route   Route  @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId String @map("route_id")

  incomingEdges TopicEdge[] @relation("ToTopic")
  outgoingEdges TopicEdge[] @relation("FromTopic")
}

model TopicEdge {
  id String @id @default(uuid())

  fromId String @map("from_id")
  toId   String @map("to_id")

  from TopicNode @relation("FromTopic", fields: [fromId], references: [id])
  to   TopicNode @relation("ToTopic", fields: [toId], references: [id])
}
